@page
@model Magazedia.Web.Pages.TalkModel
@{
	ViewData["Title"] = "Talk: " + Model.Article!.Title;
}
<article>
<h1>Talk: @Model.Article.Title</h1>


@if (Model.ArticleTalkSubjects != null)
{
	<table class="table">
		<thead>
			<tr><th>Subject</th><th>Username</th><th>When</th></tr>
		</thead>
		<tbody>
			@foreach (WikiWikiWorld.Models.ArticleTalkSubject ArticleTalkSubject in Model.ArticleTalkSubjects)
			{
			<tr>
				<td><a href="/@Model.UrlSlug/talk/@ArticleTalkSubject.UrlSlug">@ArticleTalkSubject.Subject</a></td>
				<td>@ArticleTalkSubject.CreatedByAspNetUsername</td>
				<td>@ArticleTalkSubject.DateCreated</td>
			</tr>
			}
		</tbody>
	</table>
}

<h3>Start New Subject</h3>
	<form method="post">
		<div class="form-group">
			<label asp-for="Subject">Subject</label>
			<input asp-for="Subject" class="form-control" />
			<span asp-validation-for="Subject" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Text">Initial Post</label>
			<textarea asp-for="Text" class="form-control" rows="5"></textarea>
			<span asp-validation-for="Text" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary">Submit</button>
	</form>







</article>