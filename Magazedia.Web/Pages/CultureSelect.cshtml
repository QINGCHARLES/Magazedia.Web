@page
@using Microsoft.AspNetCore.Http;
@model Magazedia.Web.Pages.CultureSelectModel
@inject IHttpContextAccessor HttpContextAccessor;
@{
	HostString Hostname = HttpContextAccessor.HttpContext!.Request.Host;
}
<style>
    article h1
    {
        background: linear-gradient(to bottom, #000c, #000c), url(/sitefiles/1/culture-select.jpeg) center center no-repeat;
    }
</style>
<article class="culture-selection">
    <h1>🤗</h1>
    <div class="languages-circle">
        <img src="/files/dalle-img.png" alt="Central Image" class="central-image" />
        <div class="lang english">
            <a href="https://en.@Helpers.GetDomainAndPortFromHostname(Hostname.ToString())/">English</a>
            <div>@Model.CultureCount["en"]+ articles</div>
        </div>
        <div class="lang japanese">
            <a href="https://ja.@Helpers.GetDomainAndPortFromHostname(Hostname.ToString())/">日本語</a>
            <div>@Model.CultureCount["ja"]+ 記事</div>
        </div>
        <div class="lang arabic">
            <a href="https://ar.@Helpers.GetDomainAndPortFromHostname(Hostname.ToString())/">العربية</a>
            <div>مقالة @Model.CultureCount["ar"]+</div>
        </div>
        <div class="lang french">
            <a href="https://fr.@Helpers.GetDomainAndPortFromHostname(Hostname.ToString())/">Français</a>
            <div>@Model.CultureCount["fr"]+ articles</div>
        </div>
        <div class="lang espanol">
            <a href="https://es.@Helpers.GetDomainAndPortFromHostname(Hostname.ToString())/">Español</a>
            <div>@Model.CultureCount["es"]+ artículos</div>
        </div>
        <div class="lang russian">
            <a href="https://ru.@Helpers.GetDomainAndPortFromHostname(Hostname.ToString())/">русский</a>
            <div>@Model.CultureCount["ru"]+ статей</div>
        </div>
    </div>
</article>

<style>
    
    .culture-selection {
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        background-color: #f6f6f6;
        text-align: center;
        margin-bottom: 2rem;
    }

    .languages-circle {
        position: relative;
        width: 7rem;
        height: 7rem;
        margin: 0 auto;
    }

    .central-image {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
    }

    .lang {
        position: absolute;
        width: 30%;
        text-align: center;
        font-size: .9rem;
        white-space: nowrap;
        
    }

        .lang a {
            text-decoration: none;
            font-weight: bold;
            text-transform: uppercase;
        }

            .lang a:hover {
                text-decoration: underline;
            }

    .english {
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(240deg) translate(125px) rotate(-240deg);
        
    }

    .japanese {
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(60deg) translate(125px) rotate(-60deg);
    }

    .arabic {
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(120deg) translate(125px) rotate(-120deg);
    }

    .french {
        top: 50%;
        left: 43%;
        transform: translate(-50%, -50%) rotate(180deg) translate(125px) rotate(-180deg);
    }

    .espanol {
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(0deg) translate(125px) rotate(0deg);
    }

    .russian {
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(300deg) translate(125px) rotate(-300deg);
    }
</style>
