@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model HistoryModel
@{
    ViewData["Title"] = "Revision history:" + Model.ArticleTitle;
}

<h1>@Model.ArticleTitle</h1>
<p></p>

<table class="table">
	<thead>
		<tr><th>When</th><th>Reason</th><th>User</th></tr> 
	</thead>
	<tbody>
	@if (Model.Articles != null) {
            foreach (var Article in Model.Articles)
		{ 
		<tr><td><a href="/@Article.UrlSlug/revision/@Article.Id">@Article.DateCreated</a></td> <td>@Article.RevisionReason</td> <td>
@Article.CreatedByAspNetUserId                    </td> </tr>
            }
        }
        </tbody>
    </table>
